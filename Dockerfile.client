# Dockerfile for WebSocket Client
FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy client file
COPY client_simple.py .

# Environment variables for server connection
ENV SERVER_HOST=host.docker.internal
ENV SERVER_PORT=8765

# Run client
CMD ["python", "client_simple.py"]
